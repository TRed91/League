@page
@model IndexModel
@{
    ViewData["Title"] = "Player List";
}

<div class="jumbotron p-3 d-flex align-items-center">
    <h1 class="display-4 flex-grow-1">
        Player List
    </h1>
</div>

<div class="d-flex bg-primary text-white">
    <div class="p-2" style="flex:0 0 10%">TeamID</div>
    <div class="p-2" style="flex:1 0 auto">Name</div>
    <div class="p-2" style="flex:0 0 20%">Position</div>
    <div class="p-2" style="flex:0 0 20%">Options</div>
</div>

@foreach (var item in Model.Players){
    <div class="d-flex border-left border-right border-bottom border-primary">
        <div class="p-2" style="flex:0 0 10%">@item.TeamId</div>
        <div class="p-2" style="flex:1 0 auto">@item.Name</div>
        <div class="p-2" style="flex:0 0 20%">@item.Position</div>
        <div class="p-2 btn-group" style="flex:0 0 20%" role="group" >
            <a class="btn btn-primary btn-sm" asp-page="./Detail" asp-route-id="@item.PlayerId">Details</a>
        </div>
    </div>
}